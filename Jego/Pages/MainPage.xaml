<Page x:Class="Jego.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:custom="clr-namespace:Jego.Controls.MainPages"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="300"
	Title="MainPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <custom:DateControl Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300"/>
        <custom:MainFrame Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        
    </Grid>
</Page>
